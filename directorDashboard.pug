doctype html
html
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title Director Dashboard
    link(rel='stylesheet' href='/css/managerDashboard.css')
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet")

  body
    // Navbar
    nav.navbar.navbar-expand-lg.navbar-light.bg-light
      a.navbar-brand(href='/') KGL
      button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarNav', aria-controls='navbarNav', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
      div.collapse.navbar-collapse(id='navbarNav')
        ul.navbar-nav
          li.nav-item
            a.nav-link(href='/') Home
          li.nav-item
            a.nav-link(href='/directorDash') Dashboard
          li.nav-item
            a.nav-link(href='/users') Users
          li.nav-item
            a.nav-link(href='/logout') Log Out

    // Content
    h2 Director Dashboard
    table
      thead
        tr
          th ID
          th Name
          th Role
          th Performance
          th Status
      tbody#employeeTable
        tr
          td 1
          td Patrick
          td Developer
          td Excellent
          td
            span.status.active(onclick='toggleStatus(this)') Active
        tr
          td 2
          td Thomas
          td Designer
          td Good
          td
            span.status.inactive(onclick='toggleStatus(this)') Inactive
        tr
          td 3
          td Charlie
          td Manager
          td Excellent
          td
            span.status.active(onclick='toggleStatus(this)') Active
        tr
          td 4
          td Gloria
          td Manager
          td Good
          td
            span.status.inactive(onclick='toggleStatus(this)') Inactive
        tr
          td 5
          td Florent
          td Developer
          td Excellent
          td
            span.status.active(onclick='toggleStatus(this)') Active
        // More employees here

    script(src='/js/managerDashboard.js')
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js")
