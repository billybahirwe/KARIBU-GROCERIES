doctype html
html
  head
    meta(charset='UTF-8')
    title Register Produce
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css')
    
    style.
      #produce-image {
        max-width: 300px;
        max-height: 200px;
        display: block;
        margin: 10px auto;
      }

  body
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
      .container-fluid
        a.navbar-brand(href='/produce/register') Karibu Groceries
        button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarNav') 
          span.navbar-toggler-icon
        #navbarNav.collapse.navbar-collapse
          ul.navbar-nav.ms-auto
            li.nav-item
              a.nav-link(href='/sales/sale') Register Sale
            li.nav-item
              a.nav-link(href='/sales/credit') Register Credit
            li.nav-item
              a.nav-link(href='/') Home
            li.nav-item
              a.nav-link(href='/logout') Logout

    .container.mt-4
      h2.text-center.mb-4 Register Produce Procurement

      form(action='/produce/register', method='POST', enctype='multipart/form-data')
        // Display the produce image preview
        img#produce-image(src='/img/default.jpg' alt='Produce Image')

        // Input fields for produce registration
        .mb-3
          label.form-label(for='produceName') Name of Produce
          input.form-control(type='text', name='produceName', id='produceName', required pattern='[a-zA-Z0-9 ]+')
          small.text-muted Alphanumeric only

        .mb-3
          label.form-label(for='produceType') Type of Produce
          input.form-control(type='text', name='produceType', id='produceType', required pattern='[A-Za-z]{2,}')
          small.text-muted Alphabets only, minimum 2 characters

        .mb-3
          label.form-label(for='date') Date of Procurement
          input.form-control(type='date', name='date', id='date', required)

        .mb-3
          label.form-label(for='time') Time of Produce
          input.form-control(type='time', name='time', id='time', required)

        .mb-3
          label.form-label(for='tonnage') Tonnage (kgs)
          input.form-control(type='number', name='tonnage', id='tonnage', required min='100')
          small.text-muted Minimum 100 kgs

        .mb-3
          label.form-label(for='cost') Cost in UGX
          input.form-control(type='number', name='cost', id='cost', required min='10000')
          small.text-muted Minimum UGX 10,000

        .mb-3
          label.form-label(for='dealer') Dealer Name
          input.form-control(type='text', name='dealerName', id='dealerName', required pattern='[a-zA-Z0-9 ]{2,}')
          small.text-muted Alphanumeric, at least 2 characters

        .mb-3
          label.form-label(for='branch') Branch
          select.form-select(name='branch', id='branch', required)
            option(value='') Select a branch
            option(value='Maganjo') Maganjo
            option(value='Matugga') Matugga

        .mb-3
          label.form-label(for='contact') Contact
          input.form-control(type='tel', name='contact', id='contact', required pattern='^\\+[0-9]{7,15}$')
          small.text-muted Must be a valid phone number starting with + (7â€“15 digits)

        .mb-3
          label.form-label(for='price') Price to be Sold At
          input.form-control(type='number', name='price', id='price', required min='1000')
          small.text-muted Minimum UGX 1,000

        .mb-3
          label.form-label(for='image') Upload Produce Image
          input.form-control(type='file', name='image', id='image')
          small.text-muted (Optional) Upload an image for the produce

        button.btn.btn-success(type='submit') Submit Produce

    // Image change script
    script.
      const produceInput = document.getElementById('produceName');
      const produceImage = document.getElementById('produce-image');

      const imageMap = {
        'beans': '/img/Beans.jpeg',
        'grain maize': '/img/grain maize.jpg',
        'cow peas': '/img/cow peas.jpg',
        'g-nuts': '/img/g-nuts.jpg',
        'soybeans': '/img/soybeans.jpg'
      };

      produceInput.addEventListener('input', () => {
        const name = produceInput.value.trim().toLowerCase();
        if (imageMap[name]) {
          produceImage.src = imageMap[name];
        } else {
          produceImage.src = '/img/default.jpg';
        }
      });

