doctype html
html
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    title KGL - Signup
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css' rel='stylesheet')
    link(rel='stylesheet', href='/css/signup.css')
    link(rel='stylesheet', href='/css/background.css')
  body
    .container.mt-2.mb-2
      .row.justify-content-center
        .col-md-4
          .card
            .card-header.text-center
              h2 KGL Signup
            .card-body.p-3
              if error
                .alert.alert-danger.text-center #{error}
              form#signupForm(action='/signingup' method='post')
                .mb-1
                  label.form-label(for='name') Name
                  input#name.form-control(type='text' name='name' required)

                .mb-1
                  label.form-label(for='username') Username
                  input#username.form-control(type='text' name='username' required)

                .mb-1
                  label.form-label(for='email') Email
                  input#email.form-control(type='email' name='email' required)

                .mb-1
                  label.form-label(for='password') Password
                  input#password.form-control(type='password' name='password' required)

                .mb-1
                  label.form-label Role
                  .d-flex.gap-3
                    .form-check
                      input.form-check-input(type='radio' name='role' id='director' value='director' required)
                      label.form-check-label(for='director') Director
                    .form-check
                      input.form-check-input(type='radio' name='role' id='salesAgent' value='salesAgent')
                      label.form-check-label(for='salesAgent') Sales Agent
                    .form-check
                      input.form-check-input(type='radio' name='role' id='manager' value='manager')
                      label.form-check-label(for='manager') Manager

                .mb-2
                  label.form-label(for='branch') Branch
                  select#branch.form-select(name='branch' required)
                    option(value='') -- Select a Branch --
                    option(value='Maganjo') Maganjo
                    option(value='Matugga') Matugga

                button.btn(type='submit') Signup

                p.mt-2.text-center
                  small
                    a(href='/login') Already have an account? Log in.
    script(src='/js/signup.js' defer)
