doctype html
html
  head
    title Sales Agent Dashboard
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css')
    link(rel='stylesheet', href='/css/sale.css')
    link(rel='stylesheet', href='/css/background.css')
  body
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
      .container-fluid
        a.navbar-brand(href='/sales/dashboard') Karibu Groceries
        button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarNav')
          span.navbar-toggler-icon
        #navbarNav.collapse.navbar-collapse
          ul.navbar-nav.ms-auto
            li.nav-item
              a.nav-link(href='/logout') Logout

    .container.mt-4
      h2.text-center.mb-4 Sales Agent Dashboard
      p.text-center.text-muted Username: #{agentName}
      p.text-center.text-muted Branch: #{branch}

      .row.g-3.justify-content-center
        .col-md-2
          a.btn.btn-primary.w-100(href='/sales/sale') Make Sale
        .col-md-3
          a.btn.btn-success.w-100(href='/sales/credit') Register Credit
        .col-md-3
          a.btn.btn-info.w-100(href='/sales/credit/list') Credit Sales List
        .col-md-2  
          a.btn.btn-primary.w-100(href='/sales/saleList') Sales List
        .col-md-2
          a.btn.btn-warning.w-100(href='/sales/stock') View Stock

    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js')
