doctype html
html
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Record Produce Sale
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css')
    link(rel='stylesheet', href='/css/sale.css')
    link(rel='stylesheet', href='/css/background.css')

  body
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
      .container-fluid
        a.navbar-brand(href='/sales/dashboard') Karibu Groceries
        button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarNav') 
          span.navbar-toggler-icon
        #navbarNav.collapse.navbar-collapse
          ul.navbar-nav.ms-auto
            li.nav-item
              a.nav-link(href='/sales/dashboard') Dashboard
            li.nav-item 
            a.nav-link(href='/sales/credit') Register Credit
            li.nav-item
              a.nav-link(href='/sales/saleList') Sales List
            li.nav-item
              a.nav-link(href='/sales/stock')  View Stock        
            li.nav-item
              a.nav-link(href='/logout') Logout
           

    .container.mt-5
      h2 Record Produce Sale 

      form(method='POST', action='/sales/sale')
        .mb-3
          label(for='produceName') Produce Name:
          input#produceName.form-control(type='text', name='produceName')

        .mb-3
          label(for='tonnage') Tonnage (kgs):
          input#tonnage.form-control(type='number', name='tonnage')

        .mb-3
          label(for='amountPaid') Amount Paid (UGX):
          input#amountPaid.form-control(type='text', name='amountPaid')

        .mb-3
          label(for='buyerName') Buyer’s Name:
          input#buyerName.form-control(type='text', name='buyerName')

        .mb-3
          label(for='salesAgent') Sales Agent’s Name:
          input#salesAgent.form-control(type='text', name='salesAgent')

        .mb-3
          label(for='branch') Branch:
          select#branch.form-control(name='branch')
            option(value='') -- Select Branch --
            option(value='Maganjo') Maganjo
            option(value='Matugga') Matugga

        .mb-3
          label(for='dateTime') Date & Time:
          input#dateTime.form-control(type='datetime-local', name='dateTime')

        button.btn.btn-primary(type='submit') Submit

      if error
        p.text-danger.mt-3= error

    script(src='/js/script.js' defer)
