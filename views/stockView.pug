doctype html
html
  head
    title Stock View
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css')
    style.
      .low-stock { background-color:rgb(222, 17, 34); }
      .safe-stock { background-color:rgb(130, 227, 153); }
  body
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
      .container-fluid
        a.navbar-brand(href='/managerDash/manager/dashboard') Karibu Groceries
        ul.navbar-nav.ms-auto
          li.nav-item
            a.nav-link(href='/managerDash/manager/dashboard') Manager Dashboard
          li.nav-item
            a.nav-link(href='/logout') Logout

    .container.mt-4
      h2.text-center.mb-4 Stock Levels - #{branch} Branch

      if stockData.length
        table.table.table-bordered.table-striped
          thead.table-dark
            tr
              th Produce
              th Available Stock (kgs)
              th Status
          tbody
            each item in stockData
              tr(class=item.alert ? 'low-stock' : 'safe-stock')
                td= item.produce
                td= item.tonnage
                td
                  if item.alert
                    span.text-danger Low Stock
                  else
                    span.text-success OK
      else
        p.text-muted.text-center No stock data found.
